<% if authenticated? %>
  <div class="container dashboard-container">
    <div class="dashboard-main">
      <h2 class="section-title">Recent Activity</h2>
      <div class="activity-feed">
        <% if @activities.any? %>
          <% @activities.each do |activity| %>
            <div class="activity-item">
              <div class="activity-icon">
                <%= activity.action_type == 'push' ? 'üì¶' : '‚ú®' %>
              </div>
              <div class="activity-content">
                <p>
                  <strong><%= activity.user.display_name %></strong> 
                  <%= activity.action_type %>ed 
                  <strong><%= activity.commit_count %> commits</strong> to 
                  <%= link_to activity.repository.name, repository_path(activity.repository) %>
                </p>
                <div class="activity-meta">
                  <%= time_ago_in_words(activity.occurred_at) %> ago
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="empty-feed">
            <p>No activity yet. Start pushing code to see your history!</p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="dashboard-sidebar">
      <div class="sidebar-section">
        <h3>Top Repositories</h3>
        <ul class="sidebar-list">
          <% @repositories.each do |repo| %>
            <li>
              <%= link_to repo.name, repository_path(repo) %>
            </li>
          <% end %>
          <% if @repositories.empty? %>
            <li class="empty-text">No repositories.</li>
          <% end %>
        </ul>
        <%= link_to "View all repositories", repositories_path, class: "view-all" %>
      </div>

      <div class="sidebar-section">
        <h3>Contributions</h3>
        <div class="contribution-summary">
          <div class="stat">
            <span class="label">Total (Year)</span>
            <span class="value"><%= current_user.total_contributions_last_year %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="hero-section">
    <div class="container hero-container">
      <div class="hero-text">
        <h1 class="animate-reveal">The next generation of <span class="gradient-text">software development</span></h1>
        <p class="animate-reveal-delay">Build, scale, and ship smarter with SL Labs. The unified platform for modern developers.</p>
        <div class="hero-cta animate-reveal-delay-2">
          <%= link_to "Start building for free", signup_path, class: "btn-hero-primary" %>
          <%= link_to "View demo", "#", class: "btn-hero-secondary" %>
        </div>
      </div>
      <div class="hero-visual">
        <div class="scene">
          <div class="cube animate-cube">
            <div class="cube-face cube-face-front">GIT</div>
            <div class="cube-face cube-face-back">REPO</div>
            <div class="cube-face cube-face-right">SHAPE</div>
            <div class="cube-face cube-face-left">CODE</div>
            <div class="cube-face cube-face-top">SL</div>
            <div class="cube-face cube-face-bottom">LABS</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="features-section">
    <div class="container">
      <h2 class="section-title">Everything you need to ship faster</h2>
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">üöÄ</div>
          <h3>Lightning Fast</h3>
          <p>Experience zero-latency repository management with our optimized Git engine.</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">üõ°Ô∏è</div>
          <h3>Secure by Default</h3>
          <p>Enterprise-grade security with JWT tokens and encrypted storage for every project.</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">ü§ù</div>
          <h3>True Collaboration</h3>
          <p>Built-in tools for teams to communicate, review code, and manage issues seamlessly.</p>
        </div>
      </div>
    </div>
  </div>
  
  <div class="stats-section">
    <div class="container stats-container">
      <div class="stat-item">
        <div class="stat-number">99.9%</div>
        <div class="stat-label">Uptime SLA</div>
      </div>
      <div class="stat-item">
        <div class="stat-number">10M+</div>
        <div class="stat-label">Repositories</div>
      </div>
      <div class="stat-item">
        <div class="stat-number">24/7</div>
        <div class="stat-label">Expert Support</div>
      </div>
    </div>
  </div>
<% end %>

<style>
  .hero-section {
    padding: 120px 0;
    overflow: hidden;
    background: radial-gradient(circle at 10% 20%, rgba(47, 129, 247, 0.1) 0%, transparent 40%),
                radial-gradient(circle at 90% 80%, rgba(35, 134, 54, 0.05) 0%, transparent 40%);
  }
  .hero-container {
    display: flex;
    align-items: center;
    gap: 4rem;
  }
  .hero-text { flex: 1.2; }
  .hero-text h1 {
    font-family: var(--font-display);
    font-size: 4.5rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 24px;
    letter-spacing: -2px;
  }
  .gradient-text {
    background: linear-gradient(90deg, #2f81f7, #3fb950);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .hero-text p {
    font-size: 1.4rem;
    color: var(--text-secondary);
    margin-bottom: 40px;
    max-width: 540px;
  }
  .hero-cta { display: flex; gap: 1rem; }
  .btn-hero-primary {
    background: var(--text-primary);
    color: var(--bg-main);
    padding: 16px 32px;
    border-radius: 12px;
    font-weight: 700;
    text-decoration: none;
    font-size: 1.1rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .btn-hero-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(240, 246, 252, 0.1);
  }
  .btn-hero-secondary {
    background: transparent;
    color: var(--text-primary);
    border: 1px solid var(--border-color);
    padding: 16px 32px;
    border-radius: 12px;
    font-weight: 700;
    text-decoration: none;
    font-size: 1.1rem;
    transition: background 0.2s ease;
  }
  .btn-hero-secondary:hover { background: var(--bg-secondary); }

  /* 3D Visual */
  .hero-visual { flex: 1; display: flex; justify-content: center; align-items: center; }
  .scene { width: 300px; height: 300px; perspective: 1000px; }
  .cube {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
  }
  .animate-cube { animation: rotateCube 20s infinite linear; }
  .cube-face {
    position: absolute;
    width: 200px;
    height: 200px;
    border: 2px solid var(--accent-color);
    background: rgba(47, 129, 247, 0.1);
    backdrop-filter: blur(4px);
    line-height: 200px;
    text-align: center;
    font-weight: 900;
    font-family: var(--font-display);
    font-size: 2rem;
    color: var(--accent-color);
    box-shadow: 0 0 20px rgba(47, 129, 247, 0.2);
  }
  .cube-face-front  { transform: rotateY(  0deg) translateZ(100px); }
  .cube-face-right  { transform: rotateY( 90deg) translateZ(100px); }
  .cube-face-back   { transform: rotateY(180deg) translateZ(100px); }
  .cube-face-left   { transform: rotateY(-90deg) translateZ(100px); }
  .cube-face-top    { transform: rotateX( 90deg) translateZ(100px); }
  .cube-face-bottom { transform: rotateX(-90deg) translateZ(100px); }

  @keyframes rotateCube {
    from { transform: rotateX(0) rotateY(0) rotateZ(0); }
    to { transform: rotateX(360deg) rotateY(360deg) rotateZ(360deg); }
  }

  /* Animations */
  .animate-reveal { animation: reveal 1s cubic-bezier(0.16, 1, 0.3, 1); }
  .animate-reveal-delay { animation: reveal 1s cubic-bezier(0.16, 1, 0.3, 1) 0.2s backwards; }
  .animate-reveal-delay-2 { animation: reveal 1s cubic-bezier(0.16, 1, 0.3, 1) 0.4s backwards; }

  @keyframes reveal {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Features */
  .features-section { padding: 100px 0; background: var(--bg-secondary); }
  .section-title {
    font-family: var(--font-display);
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 60px;
  }
  .features-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem; }
  .feature-card {
    background: var(--bg-main);
    border: 1px solid var(--border-color);
    padding: 40px;
    border-radius: 20px;
    transition: transform 0.3s ease, border-color 0.3s ease;
  }
  .feature-card:hover {
    transform: translateY(-8px);
    border-color: var(--accent-color);
  }
  .feature-icon { font-size: 2.5rem; margin-bottom: 20px; }
  .feature-card h3 { font-family: var(--font-display); font-size: 1.5rem; margin-bottom: 12px; }
  .feature-card p { color: var(--text-secondary); line-height: 1.6; }

  /* Stats */
  .stats-section { padding: 80px 0; border-top: 1px solid var(--border-color); }
  .stats-container { display: flex; justify-content: space-around; text-align: center; }
  .stat-number {
    font-family: var(--font-display);
    font-size: 3rem;
    font-weight: 800;
    color: var(--accent-color);
  }
  .stat-label { color: var(--text-secondary); text-transform: uppercase; letter-spacing: 2px; font-size: 0.8rem; font-weight: 600; }

  /* Dashboard */
  .dashboard-container { display: flex; gap: 3rem; padding-top: 40px; align-items: flex-start; }
  .dashboard-main { flex: 2; }
  .dashboard-sidebar { flex: 1; display: flex; flex-direction: column; gap: 2rem; }

  .activity-feed { display: flex; flex-direction: column; gap: 1rem; }
  .activity-item { 
    display: flex; gap: 1rem; padding: 16px; 
    border: 1px solid var(--border-color); border-radius: 12px;
    background: var(--bg-secondary);
  }
  .activity-icon { font-size: 1.5rem; }
  .activity-content p { margin: 0; font-size: 0.95rem; color: var(--text-primary); }
  .activity-content a { color: var(--accent-color); text-decoration: none; font-weight: 600; }
  .activity-meta { font-size: 0.8rem; color: var(--text-secondary); margin-top: 4px; }

  .sidebar-section { 
    border: 1px solid var(--border-color); border-radius: 12px; padding: 20px;
    background: var(--bg-main);
  }
  .sidebar-section h3 { font-size: 0.9rem; font-weight: 600; margin-bottom: 12px; text-transform: uppercase; letter-spacing: 1px; }
  .sidebar-list { list-style: none; padding: 0; margin: 0; }
  .sidebar-list li { margin-bottom: 8px; }
  .sidebar-list a { color: var(--text-primary); text-decoration: none; font-size: 0.9rem; }
  .sidebar-list a:hover { color: var(--accent-color); }
  .view-all { display: block; margin-top: 12px; font-size: 0.8rem; color: var(--text-secondary); text-decoration: none; }
  
  .contribution-summary { display: flex; flex-direction: column; gap: 8px; }
  .stat { display: flex; justify-content: space-between; font-size: 0.9rem; }
  .stat .value { font-weight: 700; color: var(--success-color); }

  @media (max-width: 968px) {
    .dashboard-container { flex-direction: column; }
    .hero-container { flex-direction: column; text-align: center; padding-top: 40px; }
    .hero-text h1 { font-size: 3rem; }
    .hero-text p { margin: 0 auto 40px; }
    .hero-cta { justify-content: center; }
    .features-grid { grid-template-columns: 1fr; }
    .stat-number { font-size: 2rem; }
  }
</style>
