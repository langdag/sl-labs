<div class="repository-show">
  <div class="repo-header">
    <div class="repo-title">
      <%= link_to @repository.user.username || @repository.user.email_address, user_profile_path(@repository.user.username || @repository.user.email_address.split('@').first), class: "repo-owner" %>
      <span class="separator">/</span>
      <span class="repo-name-link"><%= link_to @repository.name, repository_pretty_root_path(username: @repository.user.username, repository_name: @repository.name) %></span>
      <% if @path.present? %>
        <span class="separator">/</span>
        <span class="repo-path"><%= @path %></span>
      <% end %>
    </div>
  </div>

  <div class="file-view">
    <div class="file-header">
      <div class="file-info">
        <span class="file-name"><%= File.basename(@path) %></span>
        <span class="file-size"><%= number_to_human_size(@item.data.bytesize) %></span>
      </div>
    </div>
    
    <div class="file-content">
      <pre><code><%= @content %></code></pre>
    </div>
  </div>
</div>

<style>
  .file-view { border: 1px solid var(--border-color); border-radius: 6px; margin-top: 1rem; background: var(--bg-secondary); }
  .file-header { background: var(--bg-secondary); padding: 0.75rem 1rem; border-bottom: 1px solid var(--border-color); border-radius: 6px 6px 0 0; display: flex; justify-content: space-between; align-items: center; }
  .file-info { display: flex; gap: 1rem; align-items: center; }
  .file-name { font-weight: 600; color: var(--text-primary); font-size: 0.9rem; }
  .file-size { color: var(--text-secondary); font-size: 0.8rem; }
  
  .file-content { padding: 1rem; overflow-x: auto; background: #0d1117; border-radius: 0 0 6px 6px; }
  .file-content pre { margin: 0; font-family: ui-monospace, SFMono-Regular, SF Mono, Menlo, Consolas, Liberation Mono, monospace; font-size: 13px; color: #e6edf3; line-height: 1.5; }
  
  .repo-title { font-size: 1.25rem; display: flex; align-items: center; gap: 0.25rem; margin-bottom: 1rem; }
  .repo-owner { color: var(--accent-color); text-decoration: none; }
  .repo-name-link a { font-weight: bold; color: var(--accent-color); text-decoration: none; }
  .separator { color: var(--text-secondary); }
  .repo-path { color: var(--text-primary); font-weight: 500; }
</style>
